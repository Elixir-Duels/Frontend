---
export interface Props extends Record<any, any> {
	type?: string;
}
const { type, ...props } = {
	...Astro.props,
};
props.type = type || 'button';
---
<button {...props}>
    <slot />
</button>
<style>
    button {
        display: block;
        background-color: var(--color-secondary);
        color: var(--color-primary);
        outline: var(--outline-primary);
        box-shadow: var(--shadow-primary-s);
        padding: var(--size-s);
    }
</style>