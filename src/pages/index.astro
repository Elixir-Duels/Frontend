---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
---
<Layout title="Elixir Duels">
	<header>
		<h1>Elixir Duels</h1>
	</header>
	<main>
		<Button id="matchmaking"><h4>Play Annonymously</h4><h5>Current Rating: 1500</h5></Button>
	</main>
</Layout>

<style>
	header {
		margin: var(--size-m);
		flex-grow: 0;
		height: fit-content;
	}

	header > h1 {
		text-align: center;
	}

	main {
		flex-grow: 1;
		display: flex;
		flex-direction: row;
		align-self: center;
	}

	main > #matchmaking {
		flex-grow: 0;
		height: fit-content;
	}
</style>
